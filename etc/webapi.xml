<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="PUT" url="/V1/bridge/catalog/product/add">
        <service class="Lof\PimcoreIntegration\Api\Queue\ProductQueueImporterInterface" method="insertOrUpdate"/>
        <resources>
            <resource ref="Lof_PimcoreIntegration::bridge"/>
        </resources>
    </route>
    <route method="DELETE" url="/V1/bridge/catalog/product/delete/:productId">
        <service class="Lof\PimcoreIntegration\Api\Queue\ProductQueueImporterInterface" method="delete"/>
        <resources>
            <resource ref="Lof_PimcoreIntegration::bridge"/>
        </resources>
    </route>
    <route method="PUT" url="/V1/bridge/catalog/category/add">
        <service class="Lof\PimcoreIntegration\Api\Queue\CategoryQueueImporterInterface" method="insertOrUpdate"/>
        <resources>
            <resource ref="Lof_PimcoreIntegration::bridge"/>
        </resources>
    </route>
    <route method="DELETE" url="/V1/bridge/catalog/category/delete/:categoryId">
        <service class="Lof\PimcoreIntegration\Api\Queue\CategoryQueueImporterInterface" method="delete"/>
        <resources>
            <resource ref="Lof_PimcoreIntegration::bridge"/>
        </resources>
    </route>
    <route method="PUT" url="/V1/bridge/asset/add">
        <service class="Lof\PimcoreIntegration\Api\Queue\AssetQueueImporterInterface" method="insertOrUpdate"/>
        <resources>
            <resource ref="Lof_PimcoreIntegration::bridge"/>
        </resources>
    </route>
    <route method="DELETE" url="/V1/bridge/asset/delete/:assetId">
        <service class="Lof\PimcoreIntegration\Api\Queue\AssetQueueImporterInterface" method="delete"/>
        <resources>
            <resource ref="Lof_PimcoreIntegration::bridge"/>
        </resources>
    </route>
</routes>
